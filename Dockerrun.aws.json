{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "run_folder",
      "host": {
        "sourcePath": "/home/ec2-user/run"
      }
    },
    {
      "name": "assets_folder",
      "host": {
        "sourcePath": "/home/ec2-user/assets"
      }
    },
    {
      "name": "log_folder",
      "host": {
        "sourcePath": "/home/ec2-user/log"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "ramonpm/nginx:1.1",
      "essential": true,
      "memory": 500,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 8020
        }
      ],
      "links": [
        "drkiq"
      ],
      "mountPoints": [
        {
          "sourceVolume": "run_folder",
          "containerPath": "/var/run"
        },
        {
          "sourceVolume": "assets_folder",
          "containerPath": "/var/www"
        },
        {
          "sourceVolume": "log_folder",
          "containerPath": "/var/log"
        }
      ]
    },
    {
      "name": "drkiq",
      "image": "ramonpm/dockerails:1.0",
      "essential": true,
      "memory": 600,
      "mountPoints": [
        {
          "sourceVolume": "run_folder",
          "containerPath": "/var/run"
        },
        {
          "sourceVolume": "assets_folder",
          "containerPath": "/var/www"
        },
        {
          "sourceVolume": "log_folder",
          "containerPath": "/app/log"
        }
      ]
    }
  ]
}